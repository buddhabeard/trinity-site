---
import Carousel from "../components/Carousel";
import Container from "../components/Container.astro";
import PageHero from "../components/PageHero.astro";
import Layout from "../layouts/Layout.astro";
import fetchApi from "../lib/strapi";
import type { WhoWeArePage } from "../interfaces/Pages";
import { whoWeAreQuery } from "../lib/queries";

const page = await fetchApi<WhoWeArePage>({
  endpoint: "who-we-are",
  query: whoWeAreQuery,
});

const { hero, whatWeProvide } = page.data.attributes;
---

<Layout title="Who We Are">
  <main>
    <PageHero {...page.data.attributes.hero} />

    <Container isSection>
      <div class="overflow-hidden bg-white mt-12 lg:mt-24">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
          <div
            class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2"
          >
            <div class="lg:pr-8 lg:pt-4">
              <div class="lg:max-w-lg">
                <h2 class="text-2xl lg:text-3xl font-bold leading-7 text-dark">
                  {whatWeProvide.heading}
                </h2>
                <p class="mt-6 text-base lg:text-lg leading-8 text-gray-600">
                  {whatWeProvide.content}
                </p>
                <dl
                  class="mt-10 max-w-xl space-y-8 text-base leading-7 text-gray-600 lg:max-w-none"
                >
                  {
                    whatWeProvide.iconList.map((item) => (
                      <div class="flex flex-wrap">
                        <img
                          class="h-8 w-8 lg:h-12 lg:w-12"
                          src={item.icon.data.attributes.url}
                          alt=""
                        />
                        <div class="font-semibold text-gray-900 ml-4">
                          {item.heading}
                        </div>
                        <div class="ml-12 lg:ml-16">{item.content}</div>
                      </div>
                    ))
                  }
                </dl>
              </div>
            </div>
            <!-- carousel goes here -->
            <img
              src="https://tailwindui.com/img/component-images/dark-project-app-screenshot.png"
              alt="Product screenshot"
              class="w-[48rem] max-w-none rounded-xl shadow-xl ring-1 ring-gray-400/10 sm:w-[57rem] md:-ml-4 lg:-ml-0"
              width="2432"
              height="1442"
            />
          </div>
        </div>
      </div>

      <!-- testimonial -->
      <div class="overflow-hidden bg-white py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
          <div
            class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2"
          >
            <div class="lg:ml-auto lg:pl-4 lg:pt-4">
              <div class="lg:max-w-lg">
                <h2
                  class="mt-2 text-2xl lg:text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
                >
                  {whatWeProvide.heading}
                </h2>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                  {whatWeProvide.content}
                </p>
                <dl
                  class="mt-10 max-w-xl space-y-8 text-base leading-7 text-gray-600 lg:max-w-none"
                >
                  {
                    whatWeProvide.iconList.map((item) => (
                      <div class="relative pl-9">
                        <dt class="inline font-semibold text-gray-900">
                          <img src={item.icon.data.attributes.url} alt="" />
                        </dt>
                        <dd class="inline">
                          Lorem ipsum, dolor sit amet consectetur adipisicing
                          elit. Maiores impedit perferendis suscipit eaque, iste
                          dolor cupiditate blanditiis ratione.
                        </dd>
                      </div>
                    ))
                  }
                </dl>
              </div>
            </div>
            <div class="flex items-start justify-end lg:order-first">
              <img
                src="https://tailwindui.com/img/component-images/dark-project-app-screenshot.png"
                alt="Product screenshot"
                class="w-[48rem] max-w-none rounded-xl shadow-xl ring-1 ring-gray-400/10 sm:w-[57rem]"
                width="2432"
                height="1442"
              />
            </div>
          </div>
        </div>
      </div>

      <div class="w-full lg:w-1/2">
        <!-- <Carousel carousel={}/> -->
      </div>
    </Container>
  </main>
</Layout>../components/Hero.tsx
