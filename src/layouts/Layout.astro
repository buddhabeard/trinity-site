---
import Footer from "../components/Footer.astro";
import Header from "../components/Header";
import logoImage from "../images/logo.svg";
import "../styles/site.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Trinity Life Ministry is a Christ-centered residential addictions ministry."
    />
    <meta
      property="og:title"
      content="Addiction Ministry | Trinity Life Ministry | Indiana"
    />
    <meta
      property="og:description"
      content="Trinity Life Ministry is a Christ-centered residential addictions ministry."
    />
    <meta property="og:image" content={logoImage} />
    <meta property="og:image:width" content="450" />
    <meta property="og:image:height" content="231" />
    <meta property="og:url" content="https://www.trinitylifeministry.com" />
    <link rel="canonical" href="https://www.trinitylifeministry.com" />
    <meta property="og:site_name" content="Trinity Life Ministry" />
    <meta property="og:type" content="website" />
    <meta name="fb_admins_meta_tag" content="hopeandhealing316" />
    <meta
      name="google-site-verification"
      content="HcPyB4XZkEPlfHdfUkBr_vfRFgMT9zeJsF6wbrslm2E"
    />
    <meta property="fb:admins" content="hopeandhealing316" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Addiction Ministry | Trinity Life Ministry | Indiana"
    />
    <meta
      name="twitter:description"
      content="Trinity Life Ministry is a Christ-centered residential addictions ministry."
    />
    <meta name="twitter:image" content={logoImage} />
    <script async charset="utf-8" src="//cdn.embedly.com/widgets/platform.js"
    ></script>
  </head>
  <body class="pt-[24px] lg:pt-[48px]">
    <Header client:only />
    <slot />
    <Footer />

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll("oembed[url]").forEach((element) => {
          // Create the <a href="..." class="embedly-card"></a> element that Embedly uses
          // to discover the media.
          const anchor = document.createElement("a");

          // @ts-ignore
          anchor.setAttribute("href", element.getAttribute("url"));
          anchor.className = "embedly-card";

          element.appendChild(anchor);
        });
      });
    </script>
  </body>
  <style is:global>
    :root {
    }
    html {
      font-family: system-ui, sans-serif;
    }

    body {
      margin: 0;
      padding: 0;
    }
  </style>
</html>
