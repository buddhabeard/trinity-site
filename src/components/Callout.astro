---
import type { ThemeColor } from "../interfaces/Enums";
import { getColor } from "../utils";

interface Props {
  image: {
    data: {
      attributes: {
        url: string;
      };
    };
  };
  title: string;
  content: string;
  bgColor: ThemeColor;
  buttonText: string;
  url: string;
}

const { image, title, content, bgColor, buttonText, url } = Astro.props;

const bgColorClass = getColor(bgColor);

// teal: "#13A89E",
// darkBlue: "#073E6D",
// green: "#0D9346",
// limeGreen: "#8BC540",
---

<div class="py-16 sm:py-24">
  <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div
      class="relative overflow-hidden px-6 py-20 shadow-xl sm:rounded-3xl sm:px-10 sm:py-24 md:px-12 lg:px-20"
    >
      <img
        class="absolute inset-0 h-full w-full object-cover brightness-150 saturate-0"
        src={image.data.attributes.url}
        alt=""
      />
      <div class="absolute inset-0 bg-gray-900/90 mix-blend-multiply"></div>
      <div
        class="absolute -left-80 -top-56 transform-gpu blur-3xl"
        aria-hidden="true"
      >
        <div
          class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-r from-[#13a89e] to-[#073e6d] opacity-[0.45]"
          style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
        >
        </div>
      </div>
      <div
        class="hidden md:absolute md:bottom-16 md:left-[50rem] md:block md:transform-gpu md:blur-3xl"
        aria-hidden="true"
      >
        <div
          class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-r from-[#13a89e] to-[#073e6d] opacity-25"
          style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
        >
        </div>
      </div>
      <div class="relative mx-auto max-w-2xl lg:mx-0">
        <figure>
          <blockquote
            class="mt-6 text-lg font-semibold text-white sm:text-xl sm:leading-8"
          >
            <p>
              {title}
            </p>
          </blockquote>
          <figcaption class="my-8 text-base text-white">
            <div class="font-semibold">{content}</div>
          </figcaption>
        </figure>
        <a
          href="/testimonials"
          class="bg-white flex font-bold justify-center items-center text-dark px-4 h-[50px] rounded-xl w-full md:w-1/2 lg:w-1/3"
        >
          See All Testimonials</a
        >
      </div>
    </div>
  </div>
</div>
