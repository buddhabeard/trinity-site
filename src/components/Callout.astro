---
import type { ThemeColor } from "../interfaces/Enums";
import { getColor } from "../utils";

interface Props {
  image: {
    data: {
      attributes: {
        url: string;
      };
    };
  };
  title: string;
  content: string;
  bgColor: ThemeColor;
  buttonText: string;
  url: string;
}

const { image, title, content, bgColor, buttonText, url } = Astro.props;

const bgColorClass = getColor(bgColor);
---

<section
  class=`overflow-hidden bg-[url(${image.data.attributes.url})] bg-cover bg-center bg-no-repeat ${bgColorClass}`
>
  <div class="p-8 md:p-12 lg:px-16 lg:py-24">
    <div class="text-center ltr:sm:text-left">
      <h2 class="text-2xl font-bold text-white sm:text-3xl md:text-5xl">
        {title}
      </h2>

      <p
        class="hidden max-w-lg text-white/90 md:mt-6 md:block md:text-lg md:leading-relaxed"
      >
        {content}
      </p>

      <div class="mt-4 sm:mt-8">
        <a
          href={url}
          class="inline-block rounded-full bg-teal px-12 py-3 text-sm font-medium text-white transition hover:bg-teal/25 focus:outline-none focus:ring focus:ring-green"
        >
          {buttonText}
        </a>
      </div>
    </div>
  </div>
</section>
