---
interface Props {
  heading: string;
  content: string;
}

const { heading, content } = Astro.props;
---

<div class="w-full min-w-full h-[424px] relative bg-teal px-8">
  <div class="py-32 flex-col justify-start items-start gap-6 inline-flex">
    <div
      class="self-stretch text-white text-3xl md:text-4xl lg:text-5xl font-extrabold font-poppins leading-10"
    >
      {heading}
    </div>
    <div
      class="text-white text-xl font-normal font-poppins leading-7 w-full md:w-1/2"
    >
      {content}
    </div>
  </div>
</div>
