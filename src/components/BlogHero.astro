---
import type { Image } from "../interfaces/Images";
import Container from "./Container.astro";

interface Props {
  title: string;
  content: string;
  image: Image;
}

const { title, content, image } = Astro.props;
---

<div
  style={{ backgroundImage: `url(${image.data.attributes.url})` }}
  class="h-[464px] relative bg-teal bg-no-repeat bg-center bg-cover"
>
  <Container>
    <div class="py-32 flex-col justify-start items-start gap-6 inline-flex">
      <div
        class="self-stretch text-white text-3xl md:text-4xl lg:text-5xl font-extrabold font-inter leading-10"
      >
        {title}
      </div>
      <div
        class="text-white text-xl font-normal font-inter leading-7 w-full md:w-1/2"
      >
        {content}
      </div>
    </div>
  </Container>
</div>
