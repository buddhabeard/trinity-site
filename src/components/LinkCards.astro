---
import type { LinkCardComponent } from "../interfaces/Components";
import LinkCard from "./LinkCard.astro";

interface Props {
  linkCards: LinkCardComponent[];
}

const { linkCards } = Astro.props;
---

<div class="bg-white py-24 sm:py-32 container">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div
      class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3"
    >
      {linkCards.map((linkCardProps) => <LinkCard {...linkCardProps} />)}
    </div>
  </div>
</div>
