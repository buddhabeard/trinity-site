---
import type Posts from "../interfaces/Posts";
import BlogCard from "./BlogCard.astro";

interface Props {
  posts: Posts;
}

const {
  posts: { data },
} = Astro.props;
---

<div class="relative px-6 pb-6 pt-4 lg:px-8">
  <div class="absolute inset-0">
    <div class="h-1/3 bg-white sm:h-2/3"></div>
  </div>
  <div class="relative mx-auto">
    <h2 class="text-3xl font-bold tracking-tight text-darkBlue sm:text-4xl">
      Events, Testimonials and Updates
    </h2>
    <div
      class="my-6 grid grid-cols-1 lg:grid-cols-3 gap-y-8 lg:gap-8 md:max-w-96"
    >
      {data.map((post) => <BlogCard {...post} />)}
    </div>
  </div>
</div>
