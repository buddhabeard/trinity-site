---
interface Props {
  heading: string;
}

const { heading } = Astro.props;
---

<div
  class="flex flex-wrap mx-auto gap-4 md:gap-16 lg:gap-32 justify-center items-center w-full"
>
  <h3
    class="text-darkBlue text-2xl sm:text-4xl w-full font-extrabold md:w-1/3 ml-0"
  >
    {heading}
  </h3>
  <div class="text-dark text-xl font-normal leading-7 w-full md:w-1/2">
    <slot />
  </div>
</div>
