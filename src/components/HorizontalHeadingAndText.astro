---
interface Props {
  heading: string;
}

const { heading } = Astro.props;
---

<div class="flex flex-wrap mx-auto gap-4 lg:gap-16 xl:gap-32 items-center p-8 pb-4">
  <h3
    class="text-darkBlue text-3xl lg:text-4xl w-full font-bold md:w-1/3 ml-0"
  >
    {heading}
  </h3>
  <div class="text-dark text-lg font-normal leading-7 w-full md:w-1/2">
    <slot />
  </div>
</div>
